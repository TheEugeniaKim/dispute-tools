.max-width-1.mx-auto(data-component-form='dispute-add-status')
  #manage-assigned-admin-vue
  h3#modalAddStatusTitle.pb3 Edit Dispute Status
  .flex.items-center.pb3
    img(
      data-user-avatar
      src='/images/profile/placeholder-small.png'
      width='50'
    )
    .pl2.overflow-hidden
      h4.-fw-600.-ell(data-user-name) ${dispute.user.name}
      p.-fw-500.-ell(data-dispute-name) ${dispute.disputeTool.name}

  form(method='post' action='')
    input(name='_method' type='hidden' value='PUT')
    .pb2
      div
        select.form-control.-fw-600.-fw(name='status')
          option(value='' disabled hidden) Status
          each status in statuses
            if status !== 'User Update'
              option(value= status)= status
      p(class='-on-error -danger -caption -fw-500 mt1')

    .pb2
      textarea.form-control.block.-fw(
        name='note'
        rows='5'
        placeholder='Note for Admins'
      )
      p(class='-on-error -danger -caption -fw-500 mt1')

    button.-fw.-k-btn.btn-primary.-fw-600.mt1(type='submit') Send

  .pt4(data-statuses-wrapper)
