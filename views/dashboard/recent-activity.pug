mixin dashboardCampaign(title, link, collectiveName, campaignImg, campaignDescription)
  .dashboard-campaign-container
    p.mb1 New #{collectiveName} Campaign
    
    .dashboard-campaign  
      .dashboard-campaign-image
        a(href=link)
          img(src=campaignImg, width=100, height=100)
      .dashboard-campaign-body
        a(href=link)
          h4.dashboard-campaign-title=title
        p!=campaignDescription

.dashboard-block
  h4.dashboard-title
    | Recent Activity
    
each campaign, index in collective_campaigns
  - var campaignImg = '/images/profile/placeholder-small.png';
  
  if campaign.cover.exists('small')
    - var campaignImg = campaign.cover.urls['small']
  
  +dashboardCampaign(
    campaign.title,
    `/campaigns/${campaign.id}`,
    campaign.collective.name,
    campaignImg,
    campaign.description
  )
