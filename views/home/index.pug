extends ../layouts/application.pug

block content
  .-bg-neutral-light.-dark.px2.pt3
    .max-width-4.mx-auto
      h2.HomeHeading.pt1.pb3.tight Organize. Resist. Rebuild.
      .clearfix.md-flex
        .col.md-col-4.col-12.pb4
          h4.pb3.-primary Alone our Debts Are a Burden. Together, They Make Us Powerful.
          p.-paragraph.pb3.-gray
            The Debt Collective leverages collective power by offering debtors a shared platform for direct action. Do you want to help us build the platform? You can start by providing feedback during this development phase. Try it out, tell us what you think!
          a.-k-btn.btn-primary(href="/dispute-tools") Try it now

        .col.col-1.xs-hide &nbsp;
        .col.md-col-7.col-12.md-flex.items-end
          img.block.mx-auto.fit.pb1(src='/images/home/home-illustration-top.png')

block scripts
  script.
    window.addEventListener('load', function() {
      var options = {
        currentUser: !{JSON.stringify(UserRenderer(currentUser))},
        currentURL: !{JSON.stringify(currentURL)},
      };

      //- If class is not available is likely that something wrong happen with build process
      if (window.ViewHomeIndex) {
        new ViewHomeIndex(options);
      } else {
        const message = 'ViewHomeIndex class is not available';
        console.warn(message);
        window.Sentry && Sentry.captureMessage(message);
      }
    }, true);
