{
  "private": true,
  "name": "debtcollective",
  "description": "",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": ">=0.10.33"
  },
  "scripts": {
    "build": "tarima -fdV",
    "lint": "eslint *.js src bin config models controllers middlewares",
    "repl": "node bin/repl.js",
    "start": "node bin/server.js",
    "watch": "tarima -wdVP localhost:3000"
  },
  "tarima": {
    "bundle": true,
    "src": "src/**/*",
    "dest": "./public/build",
    "ignoreFiles": [
      ".gitignore"
    ],
    "filter": [
      "**/_entries/**"
    ],
    "rename": "**:{filepath/1/_entries}/{filename}.{extname}",
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "post"
      },
      "rollup": {
        "format": "iife",
        "plugins": [
          "rollup-plugin-buble"
        ]
      },
      "postcss": {
        "plugins": [
          "postcss-import",
          "postcss-cssnext"
        ]
      }
    }
  },
  "dependencies": {
    "basscss": "^8.0.2",
    "body-parser": "^1.15.2",
    "colors": "^1.1.2",
    "connect-redis": "^3.1.0",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "express": "^4.14.0",
    "express-session": "^1.14.0",
    "glob": "^7.0.5",
    "knex": "^0.11.9",
    "krypton-orm": "0.0.16",
    "lodash": "^4.14.1",
    "lodash-inflection": "^1.4.0",
    "method-override": "^2.3.6",
    "mkdirp": "^0.5.1",
    "morgan": "^1.7.0",
    "mysql": "^2.11.1",
    "neon": "^2.0.0",
    "path": "^0.12.7",
    "pg": "^6.0.3",
    "pluralize": "^3.0.0",
    "redis": "^2.6.2",
    "req-flash": "0.0.3",
    "rimraf": "^2.5.4",
    "route-mappings": "^0.3.1",
    "thulium": "^2.0.0",
    "thulium-express": "^1.1.5",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "buble": "^0.12.5",
    "postcss": "^5.1.1",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "rollup": "^0.34.3",
    "rollup-plugin-buble": "^0.12.1",
    "tarima-browser-sync": "^0.1.3",
    "tarima-cli": "^0.2.2"
  }
}
