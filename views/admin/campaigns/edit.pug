extends ../../layouts/admin.pug

block title
  | Admin/Campaigns/edit â€” The Debt Collective

block styles
  link(href="/build/stylesheets/admin/campaigns/edit.css" rel="stylesheet")

block content
  .px2.pb4
    .max-width-1.mx-auto

      h2.pt4 Edit Campaign
      h4.pb3= campaign.title

      form(
        method='post'
        action= routeMappings.Admin.Campaigns.update.url(campaign.id)
        enctype='multipart/form-data'
        data-component-form
      )
        input(type='hidden' name='_csrf' value=csrfToken)
        input(name='_method' type='hidden' value='PUT')

        .py1
          label.block.pb1.-fw-500 Cover
          if campaign.cover.exists('grayscale')
            img(src=campaign.cover.url('grayscale') width='300')
          input(name='image' type='file' accept='image/*')

        .py1
          label.block.pb1.-fw-500 Collective
          .-k-select.-border-neutral-mid
              select.-fw(name='collectiveId')
                option(value='') Collective
                each collective in collectives
                  option(
                    value= collective.id
                    selected!= campaign.collectiveId === collective.id
                  )= collective.name
          p(class="-on-error -danger -caption -fw-500 mt1")

        .py1
          label.block.pb1.-fw-500 Title
          input.-k-input.-fw.-border-neutral-mid(
            type='text'
            name='title'
            value=campaign.title
          )
          p(class="-on-error -danger -caption -fw-500 mt1")

        .py1
          label.block.pb1.-fw-500 Intro text
          textarea.-k-input.-fw.-ff-sec.-border-neutral-mid(
            name='introText'
            rows='2'
          ) #{campaign.introText}


        .py1
          label.block.pb1.-fw-500 Description
          textarea.-k-input.-fw.-ff-sec.-border-neutral-mid(
            name='description'
            rows='6'
          ) #{campaign.description}

        .py1
          input(
            type='checkbox'
            name='active'
            value='true'
            id='campaign-active'
            checked= campaign.active
          )
          label.pl1(for='campaign-active') Active

        .py1
          input(
            type='checkbox'
            name='published'
            value='true'
            id='campaign-published'
            checked= campaign.published
          )
          label.pl1(for='campaign-published') Published

        .pt3
          button.-k-btn.btn-primary.-fw.-fw-700(type="submit") Update

block scripts
  script(src="/build/javascripts/admin/campaigns/edit.js" async)
  script.
    window.addEventListener('load', function() {
      var options = {
        currentUser: !{JSON.stringify(currentUser)},
        currentURL: !{JSON.stringify(currentURL)},
      };
      new ViewAdminCampaignsEdit(options);
    }, true);
