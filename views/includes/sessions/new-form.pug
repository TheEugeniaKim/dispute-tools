div(data-component-sessionsnewform)
  div(class="max-width-1 mx-auto")
    h3 Welcome back
    p.-fw-500.mb3 Enter to your account

    form(method="post" action=routeMappings.login.url())
      input(type="hidden" name="_csrf" value=csrfToken)

      div.clearfix.mb2
        .col.col-3.pt1.pr1.right-align.-fw-500 Email
        div.col.col-9(class=errors && errors.email ? 'error' : '')
          input(name="email" class="-k-input -fw" type="email")
          p(class="-on-error -danger -caption -fw-500 mt1") ▲ Invalid email

      div.clearfix.mb2
        .col.col-3.pt1.pr1.right-align.-fw-500 Password
        div.col.col-9(class=errors && errors.password ? 'error' : '')
          input(name="password" class="-k-input -fw" type="password")
          p(class="-on-error -danger -caption -fw-500 mt1") ▲ Invalid password

      div.clearfix.mb3
        .col.col-3.pt1.pr1
        .col.col-9
          a.-fw-500.-caption(href=routeMappings.resetPassword.url()) Forgot your password?

      button(type="submit" class="-k-button -fw -fw-700") Log in

    p(class="pt3 center")
      span.-fw-500 New on The Debt Collective? #[a(href=routeMappings.signup.url()) Sign up]
