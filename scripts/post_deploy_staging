#!/usr/bin/env bash
yarn

cp ./../shared/knexfile.js ./
cp ./../shared/config.js ./config/
ln -sf /home/ubuntu/apps/tdc/shared/uploads /home/ubuntu/apps/tdc/current/public/

yarn build

export NODE_ENV=production

NODE_ENV=production yarn utils:copybadges
NODE_ENV=production yarn db:migrate

pm2 startOrRestart ecosystem.json --env staging
