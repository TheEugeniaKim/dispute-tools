.px2(data-component-form='dispute-add-status')
  .max-width-1.mx-auto
    h3#modalAddStatusTitle.pb2 Edit
    h4.a.-fw-500.mb1 ${dispute.user.account.fullname}
    h4.b.-accent.-fw-500.mb3 ${dispute.disputeTool.name}

    form(method="post" action='')
      input(type="hidden" name="_csrf" value=csrfToken)
      .pb2
        .-k-select
          select.-fw-700.-fw(name='status')
            option(value="") Status
            each status in statuses
              option(value= status)= status
        p(class="-on-error -danger -caption -fw-500 mt1")

      .pb2
        textarea.block.-k-input.-fw(
          name="comment"
          rows="3"
        )
        p(class="-on-error -danger -caption -fw-500 mt1")

      button.-fw.-k-btn.btn-primary.-fw-700(type="submit") Save
