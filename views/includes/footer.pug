-
  var wikiURL = "http://wiki.debtcollective.org"
  var repoURL = "https://github.com/debtcollective/"
  var twitterAccountURL = "https://twitter.com/0debtzone"
  var facebookAccountURL = "https://www.facebook.com/DebtCollective"

  var columns = [
    {
      header: 'Organize',
      links: [
        { name: 'Collectives', href: '#' },
        { name: 'Campaigns', href: '#' },
        { name: 'Debt Map', href: '#' }
      ]
    },
    {
      header: 'Take Action',
      links: [
        { name: 'Dispute your debt', href: '/dispute-tools' },
        { name: 'Campaigns', href: '#' }
      ]
    },
    {
      header: 'Learn',
      links: [
        { name: 'The Power Report', href: '#' },
        { name: 'About Us', href: routeMappings.about.url() },
        { name: 'Community Wiki', href: wikiURL }
      ]
    },
    {
      header: 'More',
      links: [
        { name: 'Contact', href: routeMappings.contact.url() },
        { name: 'Donate', href: '#', className: 'js-donate' },
        { name: 'Open Source', href: repoURL }
      ]
    }
  ]

footer.mx-auto.px2
  .max-width-4.pt1
    .clearfix.mxn1
      each column in columns
        .col.md-col-3.col-3.p1.pt3
          .-text-2.-ttu.-fw-600= column.header
          ul.list-reset
            each link in column.links
              - var isExternal = link.href[0] !== '/'
              li.pr3.py1
                a(
                  href=link.href
                  class="-white -fw-600" + (link.class || '')
                  rel= isExternal ? "noopener noreferrer" : ''
                  target= isExternal ? "_blank" : ''
                )= link.name

  .max-width-4.mt3
    .clearfix.mxn1
      .flex.items-center.justify-start
        a.mr4.block(href=routeMappings.root.url())
          img.Header__logo-svg(src= logo.secondary)
          .sr-only The Collective Homepage

        span.mr4.-neutral-mid Copyright #{new Date().getFullYear()}

        a(href=routeMappings.tos.url() class="-white") Terms and Conditions
